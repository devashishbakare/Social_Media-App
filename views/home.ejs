<!-- home page after sign in -->
<h1> social media home page</h1>

<section id = "feed-post">
    <h3>Post</h3>

    <form action="/post/create" method="POST" id = "new-post-form">
        <textarea name="content" cols="30" rows="7" placeholder="Type here...."></textarea>
        <input type="submit" value ="Post">
    </form>

    <div id = "post-container">
        <%for(let post of posts){%>
            <p> Posted by <%=post.user.name%></p>
            <p><%=post.content%></p>
            
            <div class = "post-comments">
                <%if(locals.user){%>
                    <form action="/comments/create" method="POST">
                        <input type="text" name = "content" placeholder="Add your comment...">
                        <input type="hidden" name = "post"  value ="<%= post._id %>">
                        <input type="submit" value = "Add Comment">
                    </form>
                <%}%>
                
                <div id = "post-comments-list">
                    <ul id="comment">
                        <%for(let comment of post.comments){%>
                            <p><%= comment.user.name %> commented</p>
                            <p><%= comment.content %></p>
                        <%}%>
                    </ul>
                </div>


            </div>
        <%}%>
    </div>


</section>