<link rel="stylesheet" type="text/css" href="/css/signIn.css"> 
   

    <div class="signin-container">
      <form action = "/user/create-session" method="POST">
        <h2>Sign In</h2>
        <div class="form-group">
          <label for="email" class ="label-spacing">Email:</label>
          <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="password" class ="label-spacing">Password:</label>
          <input type="password" id="password" name="password" required>
        </div>
        <div class="form-button">
          <button class="btn-submit">Sign In</button>
        </div>
      </form>
      <div id ="loggingwith-google">
        <a href="/user/auth/google">
          <button class="btn-submit btn-google">Login With Google</button>
        </a>
      </div>
    </div>
